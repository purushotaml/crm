<phpunit bootstrap="./bootstrap.php" colors="false" verbose="true">
    <testsuites>
        <testsuite name="CI">
            <directory>./</directory>
        </testsuite>
	</testsuites>
    <groups>
        <include>
            <!--<group>error</group>-->
        </include>
        <exclude>
            <group>fatal_error</group>
            <group>todo</group>
            <group>fail</group>
        </exclude>
    </groups>
	<logging>
        <log type="coverage-html" target="../build/coverage/html" charset="UTF-8" highlight="false" lowUpperBound="35" highLowerBound="70"/>
        <log type="coverage-clover" target="../build/coverage/clover.xml" charset="UTF-8"/>
        <log type="junit" target="../build/coverage/junit.xml" logIncompleteSkipped="false"/>
    </logging>	
</phpunit>